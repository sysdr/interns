{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "color": {
      "defaultPalette": false,
      "palette": [
        { "color": "#FFFFFF", "name": "Base", "slug": "base" },
        { "color": "#202124", "name": "Deep Charcoal", "slug": "charcoal" },
        { "color": "#1A73E8", "name": "Google Blue", "slug": "primary" },
        { "color": "#5F6368", "name": "Muted Grey", "slug": "muted" },
        { "color": "#DADCE0", "name": "Border", "slug": "border" },
        { "color": "#F8F9FA", "name": "Subtle BG", "slug": "subtle" },
        { "color": "#34A853", "name": "Success Green", "slug": "success" },
        { "color": "#EA4335", "name": "Alert Red", "slug": "alert" }
      ]
    },
    "layout": {
      "contentSize": "720px",
      "wideSize": "1280px"
    },
    "typography": {
      "fontFamilies": [
        { "name": "Inter", "slug": "inter", "fontFamily": "Inter, system-ui, sans-serif" }
      ],
      "fontSizes": [
        { "name": "Small", "size": "0.875rem", "slug": "small" },
        { "name": "Medium", "size": "1rem", "slug": "medium" },
        { "name": "Large", "size": "1.125rem", "slug": "large" },
        { "name": "X-Large", "size": "1.5rem", "slug": "x-large" },
        { "name": "XX-Large", "size": "2rem", "slug": "xx-large" }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--base)",
      "text": "var(--wp--preset--color--charcoal)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "fontWeight": "400",
      "lineHeight": "1.6"
    }
  },
  "templateParts": [
    { "area": "header", "name": "header", "title": "Header" },
    { "area": "footer", "name": "footer", "title": "Footer" }
  ]
}
